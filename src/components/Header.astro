---
import { site } from './config';

const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Blog', href: '/blog' },
  { name: 'About', href: '/about' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-slate-800 bg-slate-950/80 backdrop-blur-md">
  <nav class="mx-auto flex max-w-4xl items-center justify-between px-6 py-4">
    <a href="/" class="flex items-center space-x-2">
      <span class="text-xl font-semibold text-slate-100">{site.title}</span>
    </a>

    <div class="flex items-center space-x-6">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="text-sm text-slate-400 transition-colors hover:text-teal-400"
        >
          {item.name}
        </a>
      ))}
    </div>
  </nav>
</header>
