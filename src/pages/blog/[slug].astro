---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { site } from '../../components/config';
import { posts, type PostData } from '../../data/posts';

export async function getStaticPaths() {
  return Object.entries(posts).map(([slug, post]) => ({
    params: { slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { title, description, date, content, tags } = post;
---

<Layout title={`${title} - ${site.title}`} description={description}>
  <Header />
  <main class="flex-1">
    <article class="mx-auto max-w-3xl px-6 py-16">
      <a href="/blog" class="inline-flex items-center text-teal-400 hover:text-teal-300 mb-8">
        ← Back to Blog
      </a>

      <header class="mb-10">
        <div class="flex items-center gap-3 text-sm text-slate-500 mb-4">
          <time>{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
          <span>·</span>
          {tags.map((tag) => (
            <span key={tag} class="px-2 py-0.5 bg-slate-800 text-slate-400 rounded text-xs">
              {tag}
            </span>
          ))}
        </div>
        <h1 class="text-4xl font-bold text-slate-100">{title}</h1>
        <p class="text-xl text-slate-400 mt-4">{description}</p>
      </header>

      <div class="prose" set:html={content} />
    </article>
  </main>
  <Footer />
</Layout>
