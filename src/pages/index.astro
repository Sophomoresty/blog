---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { site } from '../components/config';
---

<Layout title={site.title} description={site.description}>
  <Header />
  <main class="flex-1">
    <section class="mx-auto max-w-4xl px-6 py-20">
      <div class="space-y-6">
        <h1 class="text-5xl font-bold text-slate-100">
          Welcome to my blog
        </h1>
        <p class="text-xl text-slate-400 max-w-2xl">
          A minimal, fast, and beautiful blog built with Astro and Tailwind CSS.
        </p>
        <div class="flex gap-4 pt-4">
          <a
            href="/blog"
            class="inline-flex items-center px-6 py-3 bg-teal-500 text-slate-900 font-medium rounded-lg hover:bg-teal-400 transition-colors"
          >
            Read Posts
          </a>
          <a
            href="/about"
            class="inline-flex items-center px-6 py-3 bg-slate-800 text-slate-200 font-medium rounded-lg hover:bg-slate-700 transition-colors"
          >
            About
          </a>
        </div>
      </div>

      <div class="mt-20 pt-10 border-t border-slate-800">
        <h2 class="text-2xl font-semibold text-slate-100 mb-8">Recent Posts</h2>
        <div class="space-y-6">
          <article class="group">
            <a href="/blog/first-post" class="block">
              <h3 class="text-xl font-medium text-slate-100 group-hover:text-teal-400 transition-colors">
                Getting Started with Astro
              </h3>
              <p class="text-slate-500 mt-2">
                Learn how to build fast, content-focused websites with Astro.
              </p>
              <time class="text-sm text-slate-600 mt-2 block">February 5, 2025</time>
            </a>
          </article>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
